<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Pengaturan">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar">

            <ImageButton
                android:id="@+id/action_back"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:background="@android:color/transparent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pengaturan"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:textSize="20dp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:background="#fff">

        <ScrollView
            android:layout_width="513dp"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:layout_below="@+id/bar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/bar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:paddingRight="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:layout_margin="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bluetooth"
                            android:textSize="@dimen/font_size"
                            android:textStyle="bold"
                            android:layout_marginLeft="0dp"
                            android:background="#17c1ff"
                            android:padding="10dp"
                            android:textColor="#fff" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="@dimen/weidth_label"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView6"
                                    android:text="Nama Blueoth"
                                    android:textSize="@dimen/font_size" />

                                <EditText
                                    android:layout_width="@dimen/weidth_input"
                                    android:layout_height="wrap_content"
                                    android:text="Pilih Bluetooth"
                                    android:id="@+id/mac_bluetoth"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="@dimen/weidth_label"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:textSize="@dimen/font_size" />

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/nama_bluetoth"
                                    android:text="Tidak ada koneksi bluetooth"
                                    android:textSize="20dp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Server"
                            android:textSize="@dimen/font_size"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:padding="10dp"
                            android:background="#17c1ff" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/weidth_label"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/label_server"
                                    android:text="Alamat url"
                                    android:textSize="@dimen/font_size"/>

                                <EditText
                                    android:layout_width="@dimen/weidth_input"
                                    android:layout_height="wrap_content"
                                    android:text="http://arivin.xyz/TM/public/"
                                    android:id="@+id/input_url"
                                    android:textSize="20dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="50dp">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Monitor"
                            android:textSize="@dimen/font_size"
                            android:textStyle="bold"
                            android:background="#17c1ff"
                            android:padding="10dp"
                            android:textColor="#fff" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/weidth_label"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/label_ip_monitor"
                                    android:text="IP monitor"
                                    android:textSize="@dimen/font_size"/>

                                <EditText
                                    android:layout_width="@dimen/weidth_input"
                                    android:layout_height="wrap_content"
                                    android:text="http://192.168.1.10"
                                    android:id="@+id/input_ip_monito"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/weidth_label"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/label_monitor_port"
                                    android:text="Port"
                                    android:textSize="@dimen/font_size"/>

                                <EditText
                                    android:layout_width="@dimen/weidth_input"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/input_monitor_port"
                                    android:text="3000"
                                    android:inputType="number"/>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.75">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Simpan Pengaturan"
                        android:textSize="@dimen/font_size"
                        android:textStyle="bold"
                        android:background="#17c1ff"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:id="@+id/textView8" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIMPAN"
                            android:id="@+id/simpan_config"
                            android:forceHasOverlappingRendering="false"
                            android:padding="10dp"
                            android:nestedScrollingEnabled="false"
                            android:longClickable="false"
                            android:elegantTextHeight="false"
                            android:contextClickable="false"
                            android:clickable="false"
                            android:allowUndo="false"
                            android:layout_margin="10dp"
                            android:layout_gravity="top|center_horizontal|right" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RESET"
                            android:id="@+id/Reset"
                            android:forceHasOverlappingRendering="false"
                            android:padding="10dp"
                            android:nestedScrollingEnabled="false"
                            android:longClickable="false"
                            android:elegantTextHeight="false"
                            android:contextClickable="false"
                            android:clickable="false"
                            android:allowUndo="false"
                            android:layout_margin="10dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lokasi GPS"
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold"
                    android:layout_marginLeft="0dp"
                    android:background="#17c1ff"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:id="@+id/textView9" />

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="419dp"
                    tools:context=".Map" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>
